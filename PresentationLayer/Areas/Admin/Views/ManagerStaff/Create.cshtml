@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model PresentationLayer.Areas.Models.ViewModelShare
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Brand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisterUser.FirstAndLastName" class="control-label">FirstAndLastName</label>
                <input asp-for="RegisterUser.FirstAndLastName" class="form-control" />
                <span asp-validation-for="RegisterUser.FirstAndLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.Username" class="control-label">Username</label>
                <input asp-for="RegisterUser.Username" class="form-control" />
                <span asp-validation-for="RegisterUser.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.Email" class="control-label">Email</label>
                <input asp-for="RegisterUser.Email" class="form-control" />
                <span asp-validation-for="RegisterUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.Password" class="control-label">Password</label>
                <input asp-for="RegisterUser.Password" class="form-control" type="password"/>
                <span asp-validation-for="RegisterUser.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.ConfirmPassword" class="control-label">ConfirmPassword</label>
                <input asp-for="RegisterUser.ConfirmPassword" class="form-control" type="password"/>
                <span asp-validation-for="RegisterUser.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>

